# Embedding Configuration
####################################
# Provider options: openai, ollama
WORKSPACEX_EMBEDDING_PROVIDER=ollama

# Model name
# - For OpenAI: text-embedding-3-small, text-embedding-3-large
# - For Ollama: nomic-embed-text
WORKSPACEX_EMBEDDING_MODEL=nomic-embed-text

# API configuration
WORKSPACEX_EMBEDDING_API_KEY=your_api_key_here
WORKSPACEX_EMBEDDING_API_BASE_URL=https://api.nomic.ai/v1

# Model parameters
WORKSPACEX_EMBEDDING_CONTEXT_LENGTH=8191
WORKSPACEX_EMBEDDING_DIMENSIONS=1536
WORKSPACEX_EMBEDDING_BATCH_SIZE=100
WORKSPACEX_EMBEDDING_TIMEOUT=60

# Ollama specific configuration
####################################
# Local Ollama server URL (if using Ollama provider)
OLLAMA_BASE_URL=http://localhost:11434

# ChromaDB Configuration
####################################
# Local storage path (for PersistentClient)
CHROMA_DATA_PATH=${HOME}/workspacex/vector_db

# Server configuration (for HttpClient)
CHROMA_HTTP_HOST=
CHROMA_HTTP_PORT=8000
CHROMA_HTTP_SSL=false
CHROMA_HTTP_HEADERS={}

# Multi-tenant configuration
CHROMA_TENANT=default_tenant
CHROMA_DATABASE=default_database

# Authentication (if needed)
CHROMA_CLIENT_AUTH_PROVIDER=
CHROMA_CLIENT_AUTH_CREDENTIALS=